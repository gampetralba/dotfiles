# Path to your Oh My Zsh installation.
export ZSH="$HOME/.oh-my-zsh"

# oh-my-zsh theme
ZSH_THEME="robbyrussell"

# plugins
plugins=(git)

# source oh-my-zsh
source $ZSH/oh-my-zsh.sh

# set EDITOR
export EDITOR='nvim'

# bat theme
export BAT_THEME="Nord"

# aliases
alias vim="nvim"
alias lg='lazygit'

# tdev - start dev tmux session with fzf project picker
function tdev {
  local dir
  dir=$(find ~/workspace -maxdepth 1 -type d | fzf --height 40% --reverse --prompt="Project: ")
  [[ -z "$dir" ]] && return

  local session_name=$(basename "$dir")
  tmux new-session -d -s "$session_name" -c "$dir"
  tmux split-window -h -t "$session_name" -p 40 -c "$dir"
  tmux select-pane -t "$session_name":1.1

  if [[ -n "$TMUX" ]]; then
    tmux switch-client -t "$session_name"
  else
    tmux attach -t "$session_name"
  fi
}

# Source private aliases if the file exists
if [ -f ~/.zshrc_private_aliases ]; then
  source ~/.zshrc_private_aliases
fi

# nvm
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# add ${ZDOTDIR:-~}/.zsh_functions as fpath reference
fpath+=${ZDOTDIR:-~}/.zsh_functions
